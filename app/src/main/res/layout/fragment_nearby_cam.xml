<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#192834"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backikon"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Yakınımdakiler"
            android:textSize="25sp"
            android:textColor="@color/colorwhite"/>


    </RelativeLayout>

    <FrameLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <com.google.android.gms.maps.MapView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/map"
                />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/beyaz_zemin"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yakınımdakiler"
            android:textColor="@color/login_edittext"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="left|center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Bahar sokak "
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="0.4 km"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_view_color"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="left|center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Karayolları Konutları"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="0.7 km"
               android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_view_color"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:gravity="left|center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="EmlakBank Konutları"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/item_text_color"
                android:backgroundTint="@color/item_text_color"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="3.7 km"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/settings_view_color"></View>

    </LinearLayout>
</LinearLayout>