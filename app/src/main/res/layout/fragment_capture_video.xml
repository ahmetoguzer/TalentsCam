    <RelativeLayout
        android:id="@+id/layout_kendincek"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:clickable="true">

        <ImageView
            android:layout_width="152dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/telefonikon"
            android:tint="@android:color/white"
            tools:layout_editor_absoluteX="-15dp"
            tools:layout_editor_absoluteY="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="right|center"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:text="@string/video_record"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="42dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_smartcam"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:clickable="true"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="179dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/cameraikon" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="right|center"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:text="@string/guess_it"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_izlekazan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:clickable="true"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="179dp"
            android:layout_height="134dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/cameraikon"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="right|center"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:text="@string/watch_gain"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnOpenCams"
        android:layout_marginTop="3dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/enyakinsmartcam"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En yakın Smart Cam"
        android:textColor="@android:color/white"
        android:alpha="0.5"
        android:layout_gravity="center"/>





